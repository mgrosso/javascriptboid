#debug 
#flock 
  %canvas#cv{ width: 500, height: 500 }
  %script
    != "window.flock = #{@flock.to_json};"
    != "addLoadEvent(function(){window.flock_run = make_flock(window.flock).initialize().start();});"
%p#notice= notice
#details
  %p
    %b Name:
    = @flock.name
  %p
    %b Avoid:
    = @flock.avoid
  %p
    %b Align:
    = @flock.align
  %p
    %b Center:
    = @flock.center
  %p
    %b Jitter:
    = @flock.jitter
  %p
    %b Goalseek:
    = @flock.goalseek
  %p
    %b Boids:
    = @flock.boids
  %p
    %b Boidsize:
    = @flock.boidsize
  %p
    %b Width:
    = @flock.width
  %p
    %b Height:
    = @flock.height

#nav
  = link_to 'Edit', edit_flock_path(@flock)
  \|
  = link_to 'Back', flocks_path
