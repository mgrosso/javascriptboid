%p#notice= notice
#flock 
  #controls 
    %a#start.link Start
    %a#stop.link Stop
    %a#toggle_halo.link Halo
    %a#initialize.link Reset
    %a#step.link Step
    %a#redraw.link Redraw
    .link= link_to 'Edit', edit_flock_path(@flock)
    .link= link_to 'Back', flocks_path
  #details
    %p
      %b Name:
      = @flock.name
      |
    %p#avoid.link
      %b Avoid:
      = @flock.avoid
      |
    %p#align.link
      %b Align:
      = @flock.align
      |
    %p#center.link
      %b Center:
      = @flock.center
      |
    %p#jitter.link
      %b Jitter:
      = @flock.jitter
      |
    %p#goalseek.link
      %b Goalseek:
      = @flock.goalseek
      |
    %p
      %b Boids:
      = @flock.boids
      |
    %p
      %b Boidsize:
      = @flock.boidsize
      |
    %p
      %b Width:
      = @flock.width
      |
    %p
      %b Height:
      = @flock.height
  %canvas#cv{ width: @flock.width, height: @flock.height }
  %script
    != "window.flock = #{@flock.to_json};"
    != "addLoadEvent(function(){window.flock_run = make_flock(window.flock).initialize().start();});"
    != "addLoadEvent(function(){window.flock_run.offset($(\"#cv\").offset());});"


