#flockwrap
  #flock 
    %canvas#cv{ width: @flock.width, height: @flock.height }
  #editwrap
    %h1= "Javascript Boid Flocking Algorithm"
    %a#editbutton.link.icon= " "
    #header.reveal.hide
      %h2= "#{@flock.name}"
    #controls.reveal.hide
      %a#start.link.icon 
      %a#stop.link.icon 
      %a#initialize.link.icon 
      %a#step.link Step
      %a#toggle_halo.link Halo
      %a#redraw.link Redraw
      %a#faster.link Faster
      %a#slower.link Slower
      %a#console_debug.link Console Debug
      %a#show_numbers.link Numbers
      .link.icon= link_to 'New', new_flock_path
      .link.icon= link_to 'Back', flocks_path
    #details.reveal.hide
      %a#avoid.link= "Avoid: #{@flock.avoid}"
      %a#align.link= "Align: #{@flock.align}"
      %a#center.link= "Center: #{@flock.center}"
      %a#jitter.link= "Jitter: #{@flock.jitter}"
      %a#goalseek.link= "Goalseek: #{@flock.goalseek}"
    .clearfix
  %script
    != "window.flock = #{@flock.to_json};"
    != "addLoadEvent(function(){window.flock_run = make_flock(window.flock).initialize().start();});"
    != "addLoadEvent(function(){window.flock_run.offset = $(\"#cv\").offset();});"

